page {
  height: 100%;
}

.container {
  height: 100%;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
  align-items: center;
  align-content: center;
}

.container .function-button {
  width: 40vw;
  height: 40vw;
  border-radius: 50%;
  margin-left: 5vw;
  margin-right: 5vw;
  margin-top: 5vw;
  margin-bottom: 5vw;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  align-content: center;
}

.function-button-image {
  width: 90%;
  height: 90%;
}

/* pages/ew/ew.wxss */
page {
  height: 100%;
}

.ew-container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.ew-item {
  background-color: rgb(255, 255, 255);
  border: 1rpx solid rgb(180, 180, 180);
  border-radius: 20rpx;
  line-height: 200rpx;
  height: 200rpx;
  width: 90%;
  margin-top: 10rpx;
  margin-bottom: 10rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-between;
}

.ew-item-name {
  height: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-left: 50rpx;
}

.ew-item-name-en {
  font-size: 30px;
  font-weight: bolder;
  color: rgb(100, 100, 100);
  line-height: 100%;
  margin-top: 40rpx;
}

.ew-item-name-zh {
  font-size: 22px;
  font-weight: normal;
  color: rgb(100, 100, 100);
  line-height: 100%;
  margin-top: 20rpx;
}

.ew-item-icon {
  height: 90%;
  margin-left: 5rpx;
  margin-right: 5rpx;
}
